<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BMSBahrain.Views.DoctorInfo"
             >
    <Shell.TitleView>
        <Grid BackgroundColor="Transparent">
            <Label HorizontalOptions="Center" Text="Doctor Information" FontSize="Large" TextColor="White" Margin="8"/>
        </Grid>
    </Shell.TitleView>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />

        </Grid.RowDefinitions>

            <Frame Grid.Row="0">
                <Label Style="{StaticResource BigRedLabel}" Text="Name"/>
            </Frame>
            
            <Frame Grid.Row="1">
                <Entry  Placeholder="Phone Number" Keyboard="Telephone" />
            </Frame>
            <Frame Grid.Row="2">
                <Entry  Placeholder="Email" Keyboard="Email"/>
            </Frame>
            <Frame Grid.Row="3">
                <Entry  Placeholder="Specialty" />
            </Frame>

        <Button Grid.Row="4" Text="Generate QR Code" BackgroundColor="#00B3C2" Margin="10" CornerRadius="6" TextColor="White" FontSize="Medium"/>
        


    </Grid>


</ContentPage>